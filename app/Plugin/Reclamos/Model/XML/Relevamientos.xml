<Relevamientos>
    <search_list file="RelevamientosSL.php" title="Relevamientos" >
        <searchfield name="razon_social" label="Razón Social" presentation="SELECT" classparams="{'model':'Reclamos.Empresa','field':'razon_social'}"/>
        <searchfield name="cuit" label="CUIT" note="Sólo números" size="20"  breakline="true" />
        <searchfield name="comuna" label="Comuna" presentation="GEOLOCALIZACION::COMUNAS"/>
        <table>
            <column>
                <listfield name="prestacion_id" label="Prestacion" presentation="AUTOCOMPLETE" classparams="{'model':'Reclamos.Prestacion'}" />
            </column>
            <column>
                <listfield name="observaciones" label="Observación" />
            </column>
            <column>
                <listfield name="fecha"  label="Fecha" presentation="DATE" />
            </column>
        </table>        
    
    </search_list>
    
    <tablemaint file="RelevamientosMaint.php">
        
        <fieldset title="Relevamientos" columns="2" id="inicio" >
            <field name="prestacion_id" label="Tipo de Prestación" presentation="SELECT" classparams="{'model':'Reclamos.Prestacion','conditions':{'Prestacion.competencia':['LUMINARIAS','ESCOMBROS','BALDIOS','ESPACIOS VERDES','POSTES']}}"/>
        </fieldset>
        
        <fieldset title="Observaciones" columns="2" id="inicio" >
            <field name="observaciones" label="Observación" presentation="TEXTAREA" />
            <field name="fecha" label="Fecha" presentation="DATE" />
        </fieldset>
        
        <files title="Archivos" id="archivos"/>       

       
    </tablemaint>
         
</Relevamientos>